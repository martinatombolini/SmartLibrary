<div class="container">
  <h2> Reader profile </h2>
    <div class="row">
      <div class="col">
        <%= image_tag 'user.png',style:"width:60%"%>
      </div>
      <div class="col-8">
    

    

      <div class="card" align= "center" style="width: 100%">
          <br>
          <p>Name: <%= current_user.name %></p>
          <br>
          <p>Email: <%= current_user.email %></p>
          <br>
          <p>Username: <%= current_user.username %></p>
          <br>
          <p>Address: <%= current_user.address %></p>
          <br><br>
          <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-outline-dark' %>
          <br>
      </div>
    </div>
  </div>


  <br><br>
  <b>Reserved books:</b>
  <br><br>


  <b>Booking requests:</b>
  <table>
  <% @reservation.each do |book| %>  
    <tr>
    <% if book.user_id==current_user.id and book.confirmed==0%>  
      <% @current_book=Book.where(:id => book.book_id) %>  
      <li>Titolo: <%= @current_book[0][:title] %>
      Note: <%= book.comments %></li>
    <% end %>
    </tr>
    <br><br>
  </table>
  <% end %>