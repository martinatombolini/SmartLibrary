
<div class="container">
    <% flash.each do |type, msg| %>
      <div class="alert alert-primary" role="alert" width="60%">
        Notification: <%= msg %>
      </div>
    <% end %>
  </div>
  <br>
<div align="center" class="container" style="width: 70%">

<h2>Update your profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :role%><br />
    <%= f.select :roles_mask, [['library',1], ['reader',2]], class:"form-control" %>
  </div>
  <br>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control" %>
  </div>
  <br>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: false, autocomplete: "name", class:"form-control" %>
  </div>
  <br>

  <div class="field">
    <%= f.label :address %>
    <em>(required if you are a library)</em><br />
    <%= f.text_field :address, autofocus: false, autocomplete: "address", class:"form-control"%>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Update", class:"btn btn-outline-dark" %>
  </div>
<% end %>
