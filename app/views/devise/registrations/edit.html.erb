<h2>Update user <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :role%><br />
    <%= f.select :roles_mask, [['library',1], ['reader',2]] %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: false, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <em>(required if you are a library)</em><br />
    <%= f.text_field :address, autofocus: false, autocomplete: "address" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>