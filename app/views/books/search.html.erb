<%= render 'books/navbar' %>
<br>

<div class="container">
<h1> Results found: </h1>
<br>


<% @books.each do |book| %>
  <div class= "row">
    <div class="col-3">
      Title:
      <%= book.title %>
    </div>
    <div class="col">
      <%= button_to 'Show details', book_path(book), :method => :get, class:"btn btn-primary"%>
    </div>
    
  </div>
  <br><br>

<% end %>
</div>
