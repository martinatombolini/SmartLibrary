%h1 Listing Books for user #{session[:user]}
= link_to 'New book', new_book_path
%table
  %tr
    %th Title
    %th Author
    %th Notes
    %th ISBN
    %th
  - @books.each do |book|
    %tr
      %td= book.title
      %td= book.author
      %td= book.notes
      %td= book.isbn
      %td= link_to 'Show', book_path(book)
      %td= link_to 'Edit', edit_book_path(book)
      %td= link_to 'Destroy', book_path(book), :method => :delete, data: { confirm: 'Are you sure?' }

=link_to 'Back to homepage', root_path
%br
%br
= form_tag logout_path, :method => :post do 
  = submit_tag 'Logout'