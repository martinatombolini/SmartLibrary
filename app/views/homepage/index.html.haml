= render 'layouts/navbar' 
%br

.container 
  - flash.each do |type, msg|
    .alert.alert-primary{role: "alert", width: "60%"}
      Notification: #{msg}

%div{:align => "center"} 
  %h1 BOOKSHELF

%table
  - @books.each do |book|
    %td
      %td=image_tag 'book.png', style: 'height:20%'
      
      %td= book.title
      - if !current_user
        %td= link_to 'Show', book_path(book)
      - else
        -if current_user.is_reader?
          %td= link_to 'Show', book_path(book)
